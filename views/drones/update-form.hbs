<h2>Update the drone</h2>

<form method="post" action="/drones/{{drones._id}}/edit" class="form">
    <label for="name"></label>
    <input type="text" id="name" class="input" name="name" value="{{drones.name}}">
    <label for="propellers"></label>
    <input type="number" id="propellers" class="input" name="propellers" value="{{drones.propellers}}">
    <label for="maxSpeed"></label>
    <input type="number" id="maxSpeed" class="input" name="maxSpeed" value="{{drones.maxSpeed}}">
    <button class="bttn">Save changes</button>
</form>